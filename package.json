{
  "name": "groble-client",
  "version": "0.1.0",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
    "check": "biome check .",
    "check:fix": "biome check . --fix",
    "format": "biome format . --write",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "commit-check": "commitlint --from HEAD~1 --to HEAD --verbose",
    "hooks:test": "pnpm run type-check && pnpm run build"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@tailwindcss/postcss": "^4.1.6",
    "@tanstack/react-query": "^5.76.0",
    "@types/node": "^20.17.32",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "postcss": "^8.5.3",
    "react-hook-form": "^7.56.4",
    "tailwindcss": "^4.1.6",
    "typescript": "^5.8.3",
    "zod": "^3.25.28",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@turbo/gen": "^2.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "turbo": "^1.13.4"
  }
}
